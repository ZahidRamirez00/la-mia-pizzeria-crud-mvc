@model Pizza

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Dettagli post</h1>
            </div>
            <div class="post-single-image-container">
                <img src="@Model.Image">
            </div>
            <p>
                <strong>Nome:</strong>
                @Model.Name
            </p>
            <p>
                <strong>Descrizione:</strong>
                @Model.Description
            </p>
            <p>
                <strong>Categoria:</strong>
                @Model.Category.Title
            </p>
            <p>
                <strong>Ingredienti:</strong>
                @foreach (Ingredienti ingredienti in Model.Ingredients)
                {
                    <div>
                        <label>@ingredienti.Ingrediente</label>
                    </div>
                }
            </p>
        </div>
    </div>
</div>