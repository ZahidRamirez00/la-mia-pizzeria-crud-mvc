@model PizzaCategoriesView

<div class="container">
    <form asp-controller="Menu" asp-action="Create">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label>Nome Pizza:</label>
            <input asp-for="Name" type="text" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Categoria:</label>
            <select asp-for="Post.CategoryId" rows="10" class="d-block w-100">
                <option value=""></option>
                @foreach (Category category in Model.Categories)
                {
                    <option value="@category.Id">@category.Title</option>
                }
            </select>
            <span asp-validation-for="Post.CategoryId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Descrizione Pizza:</label>
            <textarea asp-for="Description" type="text" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Immagine Pizza:</label>
            <input asp-for="Image" type="text" class="form-control">
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Prezzo Pizza:</label>
            <input asp-for="Prezzo" type="number" min="0" max="100" class="form-control">
            <span asp-validation-for="Prezzo" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>