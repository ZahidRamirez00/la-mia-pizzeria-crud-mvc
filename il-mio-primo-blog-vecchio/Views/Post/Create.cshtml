@model PostCategoriesView

<div class="container">
    <form asp-controller="Post" asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label>Titolo:</label>
            <input asp-for="Post.Title" type="text" class="form-control"/>
            <span asp-validation-for="Post.Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Descrizione:</label>
            <textarea asp-for="Post.Description" rows="10" class="d-block w-100"></textarea>
            <span asp-validation-for="Post.Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Categoria:</label>
            <select asp-for="Post.CategoryId" rows="10" class="d-block w-100">
                <option value=""></option>
                @foreach (Category category in Model.Categories)
                {
                    <option value="@category.Id">@category.Title</option>
                }
            </select>
            <span asp-validation-for="Post.CategoryId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Tag:</label>
            <select asp-for="TagsSelectedFromMultipleSelect" asp-items="@Model.Tags" multiple size="10" class="form-control mb-2 mr-sm-2 ml-sm-3 leftList">
            </select>
        </div>
        <div class="mb-3 form-check">
            <label>Path Immagine:</label>
            <input asp-for="Post.Image" type="text" class="form-control" />
            <span asp-validation-for="Post.Image" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Salva</button>
    </form>
</div>
